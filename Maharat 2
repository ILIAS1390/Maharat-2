def calculate_salary(hours, hourly_rate):
    if hours > 40:
        overtime = hours - 40
        salary = (40 * hourly_rate) + (overtime * hourly_rate * 1.5)
    else:
        salary = hours * hourly_rate
    return salary

# Ù…Ø«Ø§Ù„ Ø§Ø³ØªÙØ§Ø¯Ù‡:
